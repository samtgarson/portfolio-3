{
  "version": 2,
  "name": "portfolio-3",
  "alias": [
    "samgarson.com",
    "www.samgarson.com",
    "samgarson.xyz"
  ],
  "env": {
    "NODE_ENV": "production",
    "FOURSQUARE_TOKEN": "@foursquare-token",
    "NOTION_TOKEN": "@notion_token",
    "NOTION_URL": "https://www.notion.so/samtgarson/7b02e22d86404179bafeeaa5c23b26cd?v=c22cc1a23cc34d4286532b840ed52dc6",
    "MAILGUN_DOMAIN": "mail.samgarson.com",
    "MAILGUN_API_KEY": "@mailgun-api-key"
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/static-build"
    },
    {
      "src": "api/where/index.js",
      "use": "@now/node"
    },
    {
      "src": "api/email/index.js",
      "use": "@now/node"
    },
    {
      "src": "api/insta/index.js",
      "use": "@now/node"
    },
    {
      "src": "api/content/index.py",
      "use": "@now/python",
      "config": {
        "maxLambdaSize": "10mb"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/content(/.*)?",
      "dest": "/api/content/index.py",
      "methods": ["GET"]
    },
    {
      "src": "^/api/contact",
      "dest": "/api/email/index.js",
      "methods": ["POST"]
    },
    {
      "src": "^/api/(where|insta)",
      "dest": "/api/$1/index.js",
      "methods": ["GET"]
    },
    {
      "src": "^/(.*)",
      "dest": "/client/$1"
    }
  ]
}
